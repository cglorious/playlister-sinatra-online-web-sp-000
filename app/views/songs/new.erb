<h1>Create a New Song</h1>

<form action="/pets" method="POST">
  <label>Song Name:</label>

  <br>

  <input type="text" name="song[name]" id="song_name">

  <br>

  <label>Artist Name:</label>

  <br>

  <input type="text" name="song[artist]" id="artist_name">

  <br>

  <p>Check Genres that apply</p>

  <% Genre.all.each do |genre| %>
      <input type="checkbox" name="song[genre]" id="<%= genre.id %>" value="<%= genre.id %>"><%= genre.name %><br>
    <% end %>
    <br>

  <input type="submit" value="Create Song">
</form>
